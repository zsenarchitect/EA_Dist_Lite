<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Parameters"
        FontFamily="RomanD"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="True"
        MouseLeftButtonDown="mouse_down_main_panel">
    <Window.Resources>
        <SolidColorBrush x:Key="WindowTextColor" Color="#FFDAE8FD"/>
        <SolidColorBrush x:Key="WindowHighlightColor" Color="#f39c12"/>
        <SolidColorBrush x:Key="WindowPanelColor" Color="#FF464646"/>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource WindowTextColor}"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="{StaticResource WindowTextColor}"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource WindowPanelColor}"/>
            <Setter Property="Padding" Value="12,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="chrome"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Margin="4"
                                Height="26">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="chrome" Property="Background" Value="{StaticResource WindowHighlightColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="chrome" Property="BorderBrush" Value="{StaticResource WindowHighlightColor}"/>
                                <Setter TargetName="chrome" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Border BorderThickness="1"
            CornerRadius="16"
            Margin="24"
            Background="{StaticResource WindowPanelColor}">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="logo_img"
                   Grid.Column="0"
                   Height="110"
                   VerticalAlignment="Top"/>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock x:Name="header_text" FontSize="20" FontWeight="Bold" Foreground="#FFFFE59C"/>
                <TextBlock x:Name="sub_text" Margin="0,4,0,12" TextWrapping="Wrap" Width="520" Foreground="#FFCBCBCB"/>

                <Border BorderBrush="#55FFFFFF" BorderThickness="0,0,0,1" Margin="0,0,0,10"/>

                <ScrollViewer Height="260" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="table_panel" />
                </ScrollViewer>

                <TextBlock x:Name="status_text" Margin="0,8,0,4" Foreground="#FFCBCBCB" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Cancel" Margin="0,0,8,0" Width="90" Click="close_click"/>
                    <Button Content="Apply" Width="120" Click="ok_click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>




