<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="500"
        Title="EnneadTab"
        Foreground="#000"
        Margin="0"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="True"
        BorderThickness="0"
        Background="{x:Null}"
        WindowStartupLocation="CenterScreen"
        ScrollViewer.VerticalScrollBarVisibility="Disabled"
        HorizontalContentAlignment="Center"
        UseLayoutRounding="False"
        FontFamily="RomanD"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseLeftButtonDown="mouse_down_main_panel"
        Cursor="ScrollAll">
    <Window.Resources>
        <SolidColorBrush x:Key="AboutWindowTextColor" Color="#FFDAE8FD"/>
        <SolidColorBrush x:Key="AboutWindowHightlightColor" Color="#f39c12"/>
        <SolidColorBrush x:Key="AboutWindowMainPanelColor" Color="#FF464646"/>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground"
                    Value="{StaticResource AboutWindowTextColor}"/>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Foreground"
                    Value="{StaticResource AboutWindowTextColor}"/>
        </Style>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground"
                    Value="{StaticResource AboutWindowTextColor}"/>
        </Style>
        <Style TargetType="{x:Type RadioButton}">
            <Setter Property="Foreground"
                    Value="{StaticResource AboutWindowTextColor}"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Background" Value="{StaticResource AboutWindowTextColor}"/>
            <Setter Property="BorderBrush" Value="#cccccc"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource AboutWindowMainPanelColor}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="Chrome"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Margin="5"
                                Height="20"
                                SnapsToDevicePixels="true">
                            <ContentPresenter Name="Presenter"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      RecognizesAccessKey="True"
                                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AboutWindowHightlightColor}" />
                                <Setter Property="BorderBrush" Value="{StaticResource AboutWindowHightlightColor}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="Height" Value="20"/>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Border BorderThickness="1"
            CornerRadius="15"
            Margin="20,20,20,20">
        <Border.Background>
            <SolidColorBrush Color="#FF464646" Opacity="1"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="#FF53D0F1" BlurRadius="15" Opacity="0.5"/>
        </Border.Effect>
        <Grid Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column ="0"
                   Height="100"
                   x:Name="logo_img"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left" />

            <StackPanel Margin="0, 20, 0, 0"
                        Grid.Column ="1">
                <TextBlock x:Name = "title_text" Text="Room/Area to Diagram Exporter" Foreground="#FFDB6AF5" FontSize="20" TextWrapping="Wrap" FontWeight="Bold" />
                <TextBlock x:Name = "sub_text" 
                            Text="Export Revit Rooms/Areas to Rhino as color-coded diagrams or create drafting view groups in Revit." 
                            Foreground="#FFCBCBCB" 
                            TextWrapping="Wrap"  
                            MaxWidth="400" 
                            HorizontalAlignment="Left"
                            Grid.Column="0"/>
                    
                <Separator/>

                <GroupBox Header="Element Type" Margin="0,10,0,0">
                    <StackPanel>
                        <RadioButton Content="Rooms" x:Name="radio_bt_rooms" IsChecked="True" Click="element_type_changed"/>
                        <RadioButton Content="Areas" x:Name="radio_bt_areas" IsChecked="False" Click="element_type_changed"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Export Method" Margin="0,10,0,0">
                    <StackPanel>
                        <RadioButton Content="Export to Rhino (.3dm file)" x:Name="radio_bt_rhino" IsChecked="True" Click="export_method_changed"/>
                        <RadioButton Content="Create Drafting View Group" x:Name="radio_bt_drafting" IsChecked="False" Click="export_method_changed"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Geometry Settings" Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Corner Fillet Radius (feet):" VerticalAlignment="Center" Margin="5,0,5,0"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="textbox_fillet_radius" Text="10" Margin="5,0,5,0" TextChanged="fillet_radius_changed"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Inner Offset Distance (feet):" VerticalAlignment="Center" Margin="5,0,5,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="textbox_offset_distance" Text="5" Margin="5,0,5,0" TextChanged="offset_distance_changed"/>
                    </Grid>
                </GroupBox>

                <TextBlock x:Name="debug_textbox" Text="Ready to export..." Foreground="#FFCBCBCB" TextWrapping="Wrap" Margin="0,10,0,0"/>
                
                <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Pick Views" Click="pick_views_click" x:Name="bt_pick_views" Width="120"/>
                    <Button Content="Export to Diagram" Click="export_click" x:Name="bt_export" Width="180" Margin="10,0,0,0"/>
                    <Button Content="Close" Click="close_Click" Width="100" Margin="10,0,0,0"/>
                </WrapPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>
